import sys

# Clase para representar un estudiante (optimizada)
class Estudiante:
    def __init__(self, nombre, apellido, edad, ID, calificaciones):
        self.nombre = nombre  # Almacenamos solo la cantidad de memoria necesaria para el nombre
        self.apellido = apellido  # Igual para el apellido
        self.edad = edad
        self.ID = ID  # Almacenamos solo la cantidad necesaria para el ID
        self.calificaciones = calificaciones  # Almacenamos solo el array necesario para las calificaciones

    def calcular_memoria(self):
        # Calculamos la memoria usada solo por los elementos necesarios
        return sys.getsizeof(self.nombre) + sys.getsizeof(self.apellido) + sys.getsizeof(self.ID) + sys.getsizeof(self.calificaciones)

    def imprimir(self):
        # Imprimimos los detalles del estudiante
        print(f"Nombre: {self.nombre} {self.apellido}")
        print(f"Edad: {self.edad}")
        print(f"ID: {self.ID}")
        print(f"Calificaciones: {self.calificaciones}")
        print(f"Memoria utilizada: {self.calcular_memoria()} bytes")

# Ejemplo de uso
calificaciones = [85, 90, 78]  # Array de calificaciones
estudiante = Estudiante("Carlos", "Gomez", 20, "12345678", calificaciones)  # Creamos un estudiante optimizado
estudiante.imprimir()  # Imprimimos los detalles del estudiante
